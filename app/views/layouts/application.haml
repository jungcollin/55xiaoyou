!!! Strict

%html
  %head
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}
    %title=@title
    -bundle do
      =stylesheet_link_tag "blueprintcss/screen"
      / [if lt IE 8]
        =stylesheet_link_tag "blueprintcss/ie"
      =stylesheet_link_tag "wikistyle", "default" 
      =javascript_include_tag "jquery", "jrails", "swfobject", "application" 

  %body
    #toolbar
      =link_to_function '', 'Game.next()', :class => 'next'
    .container
      #content.span-24
        =yield
      #footer.span-24
