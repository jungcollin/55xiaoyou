!!! Strict

%html
  %head
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}
    %title=@title
    -bundle do
      =stylesheet_link_tag "blueprint/screen"
      / [if lt IE 8]
        =stylesheet_link_tag "blueprint/ie"
      =stylesheet_link_tag "facebox", "default" 
      =javascript_include_tag "jquery", "jrails", "facebox", "application" 

  %body
    .container
      #toolbar
        =link_to_function '', 'Game.next()', :class => 'next'
      #content.span-19
        =yield
      #footer.span-19
